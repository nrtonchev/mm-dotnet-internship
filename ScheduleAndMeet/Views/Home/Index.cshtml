@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<br />
	<h2 class="h3">Search for available rooms</h2>
	<br />

	<div class="border container" style="padding:30px;">
		<form method="post" style="padding:30px;">
			<div class="form-group row">
				<div class="col-3" >
					<label>Date</label>
				</div>
				<div class="col-6">
					<input required type="date" name="date" class="form-control" />
				</div>
			</div>
			<div class="form-group row">
				<div class="col-3" >
					<label>Number of Participants</label>
				</div>
				<div class="col-6">
					<input required type="number" name="capacity" class="form-control" />
				</div>
			</div>
			<div class="form-group row">
				<div class="col-3">
					<label>Meeting Duration (minutes)</label>
				</div>
				<div class="col-6">
					<input required type="number" name="minutes"  class="form-control" />
				</div>
			</div>
			<div class="form-group row">
				<div class="col-6 offset-3">
					<button type="submit" asp-controller="Schedule" asp-action="SchedulingTable" class="btn btn-secondary form-control">
						Search
					</button>
				</div>
			</div>
		</form>
	</div>
</div>
